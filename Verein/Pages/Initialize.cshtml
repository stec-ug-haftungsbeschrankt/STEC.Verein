@page
@model InitializeModel
@{
    ViewData["Title"] = "Verein Initialisieren";
    ViewData["VereinsName"] = "Hundeverein";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">@ViewData["VereinsName"]</h1>
        <p class="lead">Willkommen zur Verwaltungssoftware f√ºr Hundevereine.</p>
        <hr class="my-4">
        <p>Dieser Dialog dient dazu deinen Verein zu Initialisieren.</p>
    </div>
</div>

<form method="post">
    <h2>Verein anlegen</h2>

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="Input.VereinsName"></label>
                <input asp-for="Input.VereinsName" class="form-control" />
                <span asp-validation-for="Input.VereinsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.VereinsFirmierung"></label>
                <input asp-for="Input.VereinsFirmierung" class="form-control" />
                <span asp-validation-for="Input.VereinsFirmierung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.VereinsNummer"></label>
                <input asp-for="Input.VereinsNummer" class="form-control" />
                <span asp-validation-for="Input.VereinsNummer" class="text-danger"></span>
            </div>
        </div>
    </div>

    <h2>Administrator anlegen</h2>

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Verein anlegen</button>
        </div>
    </div>
</form>

