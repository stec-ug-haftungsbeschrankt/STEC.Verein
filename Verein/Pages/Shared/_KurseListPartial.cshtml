@using Verein.Models
@model List<Kurs>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Titel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Beschreibung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Startdatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Enddatum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Beschreibung)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Startdatum)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Enddatum)
            </td>
            <td class="align-middle">
                <a class="btn btn-primary float-right" asp-page="../Kurse/Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>