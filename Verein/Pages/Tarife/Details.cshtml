@page
@using Microsoft.AspNetCore.Identity
@using Verein.Models
@model Verein.Pages.Tarife.DetailsModel

@inject UserManager<HundevereinUser> UserManager

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tarif</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tarif.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarif.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tarif.Fee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarif.Fee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tarif.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarif.Description)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-sm-12">
    @if (@UserManager.GetUserAsync(User).Result.Rolle <= BenutzerTyp.ErweiterterVorstand)
    {
        <a class="btn btn-primary mr-1" asp-page="./Edit" asp-route-id="@Model.Tarif.Id">Editieren</a>
        <a class="btn btn-danger mr-1" asp-page="./Delete" asp-route-id="@Model.Tarif.Id">Löschen</a>
    }
        <a class="btn btn-secondary mr-1"asp-page="./Index">Zurück zur Liste</a>
    </div>
</div>
