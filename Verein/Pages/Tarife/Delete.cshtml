@page
@model Verein.Pages.Tarife.DeleteModel

@{
    ViewData["Title"] = "Tarif löschen";
}

<h1>Tarif löschen</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Tarif</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tarif.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarif.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tarif.Fee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarif.Fee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tarif.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarif.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Tarif.Id" />
        <input type="submit" value="Löschen" class="btn btn-danger mr-1" />
        <a class="btn btn-secondary mr-1" asp-page="./Index">Zurück zur Liste</a>
    </form>
</div>
