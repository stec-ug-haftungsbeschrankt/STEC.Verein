@page
@model Verein.Pages.ZahlungsInformationen.IndexModel
@using Verein.Models;

@{
    ViewData["Title"] = "Zahlungsinformationen";
}

<h1>Zahlungsinformationen</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Neue Zahlungsinformation erstellen</a>
    <input type="text" id="zahlungsinformationenSearch" class="float-right mr-3" placeholder="Suche..." title="Type in a name">
</p>
<table id="zahlungsinformationenTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BankInformation[0].BankName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankInformation[0].KontoInhaber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankInformation[0].Iban)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankInformation[0].Bic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankInformation[0].Besitzer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BankInformation) {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.BankName)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.KontoInhaber)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Iban)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Bic)
            </td>
            <td class="align-middle">
                @foreach (var besitzer in item.Besitzer)
                {
                    @Html.Raw(string.Format($"{besitzer.Vorname} {besitzer.Name}"));
                    <br />
                }
            </td>
            <td class="align-middle">
                <a class="btn btn-primary float-right" asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
