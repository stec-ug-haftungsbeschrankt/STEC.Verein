@page
@model Verein.Pages.Inventar.IndexModel

@{
    ViewData["Title"] = "Inventar";
}

<h1>Inventar</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Neuen Gegenstand erstellen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inventar[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventar[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventar[0].Ort)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Inventar) {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Ort)
            </td>
            <td class="align-middle">
                <a class="btn btn-primary float-right" asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
