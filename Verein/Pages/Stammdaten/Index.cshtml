@page
@using Microsoft.AspNetCore.Identity
@using Verein.Models

@model Verein.Pages.Stammdaten.IndexModel

@inject UserManager<HundevereinUser> UserManager


@{
    ViewData["Title"] = "Stammdaten";
}

<h1>Stammdaten</h1>

<p>
    @if (@UserManager.GetUserAsync(User).Result.Rolle <= BenutzerTyp.Vorstand)
    {
    <a class="btn btn-primary" asp-page="Create">Neuen Eintrag erstellen</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StammdatenEintrag[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StammdatenEintrag[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StammdatenEintrag[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StammdatenEintrag[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.StammdatenEintrag) {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="align-middle">
                <a class="btn btn-primary float-right" asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
